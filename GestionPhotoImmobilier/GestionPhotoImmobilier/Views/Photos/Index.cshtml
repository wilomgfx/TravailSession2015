@model IEnumerable<GestionPhotoImmobilier.Models.Photo>

@{
    ViewBag.Title = "Index des Photos";
}

<h2>Index des Photos</h2>

<p>
    @Html.ActionLink("Ajouter une nouvelle photo", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TypeFichier)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Chemin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Propriete.Client)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeFichier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chemin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Propriete.Client)
            </td>
            <td>
                @Html.ActionLink("Modifier", "Edit", new { id = item.PhotoId }) |
                @Html.ActionLink("Détails", "Details", new { id = item.PhotoId }) |
                @Html.ActionLink("Supprimer", "Delete", new { id = item.PhotoId })
            </td>
        </tr>
    }

</table>
