@model IEnumerable<GestionPhotoImmobilier.Models.Rdv>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>

    @Html.ActionLink("Créer un nouveau rendez-vous", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Confirmer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photographe)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    bool bonBool = (bool)item.Confirmer;
    string boolFrancais = "";
    if (bonBool == true)
    {
        boolFrancais = "Oui";
    }
    else
    {
        boolFrancais = "Non";
    }
    
    <tr>
        <td>
           @boolFrancais
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Client)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Photographe)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id=item.RdvId }) |
            @Html.ActionLink("Détails", "Details", new { id=item.RdvId }) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.RdvId })
        </td>
    </tr>
}

</table>
